# Application Configuration
# Copier ce fichier vers .env et modifier les valeurs selon vos besoins

# Seed the database on first run (true/false)
M_VITE_SEED=true

# Database URL (SQLite local file)
M_VITE_DATABASE_URL=file:sqlite.db

# Backend server port
M_VITE_PORT=3001

# JWT Secret for authentication (CHANGEZ CECI EN PRODUCTION!)
M_VITE_JWT_SECRET=paintms-secret-2025-1712002

# Environment (development/production)
NODE_ENV=development

# Auto-updater (for production builds)
# GITHUB_TOKEN=your_github_personal_access_token

# Logging level (error/warn/info/debug)
LOG_LEVEL=info